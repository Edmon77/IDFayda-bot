# Bot Configuration
BOT_TOKEN=your_telegram_bot_token_here
CAPTCHA_KEY=your_2captcha_api_key_here

# Database Configuration
# MongoDB Atlas: mongodb+srv://username:password@cluster.mongodb.net/dbname?retryWrites=true&w=majority
# Or Railway MongoDB: mongodb://mongo:27017/fayda_bot
MONGODB_URI=mongodb://localhost:27017/fayda_bot

# Redis Configuration
# Upstash: rediss://default:password@host.upstash.io:6379
# Or Railway Redis: redis://redis:6379
REDIS_URL=redis://localhost:6379

# Session & Security
# Generate with: openssl rand -hex 32
SESSION_SECRET=your_random_secret_key_here

# Deployment Configuration
# Will be set automatically by your hosting platform
# Format: https://your-app-name.platform.com
WEBHOOK_DOMAIN=https://your-app-name.railway.app

# Server Configuration
PORT=3000
NODE_ENV=production

# Optional: Logging
LOG_LEVEL=info
