<!DOCTYPE html>
<html>
<head>
    <title>Admin Dashboard</title>
    <style>
        * { margin: 0; padding: 0; box-sizing: border-box; }
        body { font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif; background: #f0f2f5; }
        .header { background: #1a73e8; color: white; padding: 20px; }
        .container { max-width: 1200px; margin: 20px auto; padding: 0 20px; }
        .stats { display: grid; grid-template-columns: repeat(auto-fit, minmax(200px, 1fr)); gap: 20px; margin-bottom: 30px; }
        .stat-card { background: white; padding: 20px; border-radius: 10px; box-shadow: 0 2px 5px rgba(0,0,0,0.1); text-align: center; }
        .stat-card h3 { color: #666; font-size: 14px; margin-bottom: 10px; }
        .stat-card .number { font-size: 32px; font-weight: bold; color: #1a73e8; }
        .buyers-table { background: white; border-radius: 10px; padding: 20px; box-shadow: 0 2px 5px rgba(0,0,0,0.1); }
        table { width: 100%; border-collapse: collapse; }
        th { text-align: left; padding: 10px; background: #f8f9fa; }
        td { padding: 10px; border-bottom: 1px solid #eee; }
        .btn { padding: 5px 10px; background: #1a73e8; color: white; text-decoration: none; border-radius: 5px; font-size: 12px; }
        .expiring { color: orange; font-weight: bold; }
        .expired { color: red; font-weight: bold; }
    </style>
</head>
<body>
    <div class="header">
        <h1>ðŸ“Š Fayda Bot Admin Dashboard</h1>
    </div>
    
    <div class="container">
        <div class="stats">
            <div class="stat-card">
                <h3>Total Users</h3>
                <div class="number"><%= stats.totalUsers %></div>
            </div>
            <div class="stat-card">
                <h3>Buyers</h3>
                <div class="number"><%= stats.buyers %></div>
            </div>
            <div class="stat-card">
                <h3>Sub-Users</h3>
                <div class="number"><%= stats.subUsers %></div>
            </div>
            <div class="stat-card">
                <h3>Expiring Soon</h3>
                <div class="number"><%= stats.expiringSoon %></div>
            </div>
            <!-- NEW STAT CARD -->
            <div class="stat-card">
                <h3>Total Downloads</h3>
                <div class="number"><%= stats.totalDownloads %></div>
            </div>
        </div>
        
        <div class="buyers-table">
            <h2>Buyers List</h2>
            <a href="/export-users" class="btn" style="float: right; margin-bottom: 10px;">ðŸ“¥ Export CSV</a>
            <table>
                <thead>
                    <tr>
                        <th>Telegram ID</th>
                        <th>Name</th>
                        <th>Own PDFs</th>
                        <th>Sub PDFs</th>
                        <th>Total</th>
                        <th>Sub-Users</th>
                        <th>Expiry Date</th>
                        <th>Last Active</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <% buyers.forEach(b => { %>
                        <tr>
                            <td><%= b.telegramId %></td>
                            <td><%= b.firstName || 'N/A' %> <%= b.lastName || '' %></td>
                            <td><%= b.downloadCount || 0 %></td>
                            <td><%= b.subDownloads %></td>
                            <td><%= b.totalDownloads %></td>
                            <td><%= b.subUsers ? b.subUsers.length : 0 %>/9</td>
                            <td class="<%= new Date(b.expiryDate) < new Date() ? 'expired' : (new Date(b.expiryDate) < new Date(Date.now() + 7*24*60*60*1000) ? 'expiring' : '') %>">
                                <%= b.expiryDate ? new Date(b.expiryDate).toLocaleDateString() : 'N/A' %>
                            </td>
                            <td><%= b.lastActive ? new Date(b.lastActive).toLocaleDateString() : 'Never' %></td>
                            <td>
                                <a href="/buyer/<%= b.telegramId %>" class="btn">Manage</a>
                            </td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        </div>
    </div>
</body>
</html>
